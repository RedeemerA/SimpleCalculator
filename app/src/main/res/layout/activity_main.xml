<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".page.MainActivity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/tv_main_result"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="65sp"
            android:maxLines="1"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/bt_main_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:background="@drawable/selector_white_bg"

                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_switch_PN"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-"
                android:background="@drawable/selector_white_bg"

                android:gravity="center"
                android:textSize="30sp" />
            <Button
                android:id="@+id/bt_main_exponential"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="^"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_division"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="รท"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/bt_main_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_mul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ร"
                android:gravity="center"
                android:textSize="30sp"
                android:background="@drawable/selector_orange_bg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/bt_main_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:gravity="center"
                android:textSize="30sp"
                android:background="@drawable/selector_orange_bg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/bt_main_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_sub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:gravity="center"
                android:textSize="30sp"
                android:background="@drawable/selector_orange_bg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/bt_main_zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="0"
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_spot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:background="@drawable/selector_white_bg"
                android:gravity="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_main_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:gravity="center"
                android:textSize="30sp"
                android:background="@drawable/selector_white_bg"/>

           </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>